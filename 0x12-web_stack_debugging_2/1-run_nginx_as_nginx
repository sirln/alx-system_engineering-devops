#!/usr/bin/env bash

# Check if script is run as root
if [ "$EUID" -ne 0 ]
then 
    echo "Please run as root"
    exit
fi

# Ensure the nginx user exists
if ! id "nginx" &>/dev/null; then
    useradd -r -M -s /sbin/nologin nginx
fi

# Modify the nginx configuration to change the user and the port
NGINX_CONF_DIR="/etc/nginx"
NGINX_CONF_FILE="$NGINX_CONF_DIR/nginx.conf"

# Set the nginx user
sed -i 's/^user .*/user nginx;/' $NGINX_CONF_FILE

# Set the nginx listener port to 8080
sed -i "s/listen [0-9]\+ default_server;/listen 8080 default_server;/" $NGINX_CONF_FILE
sed -i "s/listen \[::\]:[0-9]\+ default_server;/listen [::]:8080 default_server;/" $NGINX_CONF_FILE


# Test the nginx configuration
nginx -t

# If it's successful, reload nginx
if mycmd -eq 0; then
    service nginx reload
else
    echo "Nginx configuration test failed"
    exit 1
fi

echo "Configuration applied successfully"
